<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Just+Me+Again+Down+Here&family=Nanum+Myeongjo:wght@400;700;800&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="/css/style.css">
    <title>news</title>
</head>
<body>
    <%- include ("common/header.ejs",{page:"notmain"})%>
    <div id="container">
        <div class="news_cont1">
            <div class="newswrap">
                <% for( let i =0 ; i < newsData.length; i++){%>
                <a href="/newsdetail/<%-newsData[i].num%>" class="news">
                    <div class="imgwrap">
                        <img src="/upload/<%-newsData[i].thumbnail[0]%>">
                        <div class="hoverImg"></div>
                    </div>
                    <div class="news_title"><%-newsData[i].month%> Monthly Review | <%-newsData[i].title%></div>
                    <div class="news_date"><%-newsData[i].date%></div>
                </a>
                <% } %>
            </div>
        </div>
    </div>
    <%- include ("common/footer.ejs")%>
</body>
</html>